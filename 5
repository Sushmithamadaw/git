<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        label {
            display: block;
            margin: 20px;
            font-size: 20px;
    
        }
        button{
            color: chartreuse;
        }
    </style>
    <script>
        function v() {
            var usn=document.getElementById("usn").value;
            if(usn.match(/[1-4][A-Z]{2}[0-9]{2}[A-Z]{3}[0-9]{2}/)!==null)
            alert("USN is valid");
            else
            alert("USN is Invalid");
        }
        function s() {
            var sem=document.getElementById("sem").value;
            if(sem.match(/[1-6]/)!==null)
            alert("Semester is valid");
            else
            alert("Semester is Invalid");
        }
    </script>
</head>
<body>
    <label for="usn">Enter USN</label><input type="text" name="usn" id="usn" >
    <input type="button" value="Validate USN" onclick="v();">
    <label for="sem">Enter Semester</label><input type="text" name="sem" id="sem" >
    <input type="button" value="Validate Semester" onclick="s();">
</body>
</html>
